---
import Layout from "../../layouts/Layout.astro"
import { getCollection } from "astro:content"
import { urlSafe } from "../../utilities/utilities"

const blogDetails = await getCollection("blog")
---

<Layout title="Blog">
    <main>
        <h1>Blog</h1>
        {
            blogDetails.map((item) => (
                <div>
                    <h3>
                        <a href={`/blog/${urlSafe(item.slug)}`}>
                            {item.data.title}
                        </a>
                    </h3>
                    <p>{item.data.description}</p>
                </div>
            ))
        }
    </main>
</Layout>

<style>
    h1 {
        text-align: center;
    }
    div {
        border-top: 1px solid black;
    }
</style>
